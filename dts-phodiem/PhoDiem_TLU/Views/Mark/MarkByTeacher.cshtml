
@{
    ViewBag.Title = "MarkByTeacher";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div id="main_content">
    <div class="page-container">
        <div class="form__select">
            <div class="form__select-header">
                <h4 class="form__select-header-Text">Thống kê tỷ lệ(%) điểm A,B,C,D,F của giáo viên</h4>
            </div>
            <div class="form__select-input">
                @using (Html.BeginForm("MarkByTeacher", "Mark", FormMethod.Post))
                {
                <div class="form__select-input-container">
                    @Html.ValidationSummary(true)
                    <div class="select__group">
                        @Html.DropDownList("teacher", (IEnumerable<SelectListItem>)ViewBag.teacherName, "Giáo viên", new { @class = "select.input-group-sm form-control" })
                        @Html.DropDownList("schoolYearStart", (IEnumerable<SelectListItem>)(ViewBag.years), "Năm xuất phát", new { @id = "startYear", @class = "select.input-group-sm form-control" })
                        @Html.DropDownList("schoolYearEnd", (IEnumerable<SelectListItem>)(ViewBag.years), "Năm kết thúc", new { @id = "endYear", @class = "select.input-group-sm form-control" })
                        <select id="semester" name="semester" class="select.input-group-sm form-control">
                            <option value> Kì học </option>
                        </select>


                        @Html.DropDownList("courseYear", (IEnumerable<SelectListItem>)(ViewBag.courseYear), "Khóa học", new { @class = "select.input-group-sm form-control" })
                        @Html.DropDownList("markOption", (IEnumerable<SelectListItem>)(ViewBag.markOption), "Loại điểm", new { @class = "select.input-group-sm form-control" })

                    </div>
                    <div class="select__btn-container">
                        <div class="select__btn-group">
                            <input id="show__btn-id" class="show-data__option-btn" type="submit" value="Hiển thị" />
                            <button id="export__btn-id" class="show-data__option-btn" value="Export" formaction="@Url.Action("ExportMarkByTeacher")" formmethod="post">
                                xuất file excel
                            </button>
                        </div>
                    </div>
                </div>
                }
            </div>
        </div>
